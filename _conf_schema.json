{
  "api": {
    "description": "AstrPush API服务配置",
    "type": "object",
    "properties": {
      "host": {
        "description": "API监听地址（默认0.0.0.0）",
        "type": "string",
        "default": "0.0.0.0"
      },
      "port": {
        "description": "API监听端口（默认9966）",
        "type": "integer",
        "default": 9966,
        "minimum": 1,
        "maximum": 65535
      },
      "token": {
        "description": "请求鉴权Token（自动生成）",
        "type": "string",
        "minLength": 16
      },
      "default_umo": {
        "description": "默认消息接收者umo（必填）",
        "type": "string",
        "minLength": 3
      }
    },
    "required": ["token", "default_umo"],
    "additionalProperties": false
  }
}

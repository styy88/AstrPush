{
  "api": {
    "description": "AstrPush API服务配置",
    "type": "object",
    "properties": {
      "host": {
        "description": "API监听地址（默认0.0.0.0，允许所有网卡访问）",
        "type": "string",
        "default": "0.0.0.0"
      },
      "port": {
        "description": "API监听端口（默认9966）",
        "type": "integer",
        "default": 9966,
        "minimum": 1,
        "maximum": 65535
      },
      "token": {
        "description": "请求鉴权Token（必填，建议使用32位随机字符串，如`secrets.token_urlsafe(32)`生成）",
        "type": "string",
        "minLength": 16
      },
      "default_umo": {
        "description": "默认消息接收者umo（必填，从AstrBot日志获取，格式如用户ID`123456`或群聊ID`7890@chatroom`）",
        "type": "string",
        "minLength": 3
      }
    },
    "required": ["token", "default_umo"],
    "additionalProperties": false
  }
}
